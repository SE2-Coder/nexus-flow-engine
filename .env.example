# Nginx Configuration
NGINX_PORT=80
# The domain where AppFlowy will be accessible
APPFLOWY_BASE_URL=https://your-domain.com

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=postgres
# In Docker Compose, host is usually the service name
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
# URI for services to connect to Redis
APPFLOWY_REDIS_URI=redis://redis:6379

# Object Storage (MinIO) Configuration
# Default credentials for MinIO (Change these!)
AWS_ACCESS_KEY=minioadmin
AWS_SECRET=minioadmin
APPFLOWY_S3_USE_MINIO=true
APPFLOWY_S3_MINIO_URL=http://minio:9000
APPFLOWY_S3_ACCESS_KEY=minioadmin
APPFLOWY_S3_SECRET_KEY=minioadmin
APPFLOWY_S3_BUCKET=appflowy

# Authentication (GoTrue) Configuration
GOTRUE_ADMIN_EMAIL=admin@example.com
GOTRUE_ADMIN_PASSWORD=your_admin_password
# Generate a random 32-char string
GOTRUE_JWT_SECRET=your_super_secret_jwt_token_at_least_32_chars
GOTRUE_JWT_EXP=3600
API_EXTERNAL_URL=https://your-domain.com/gotrue

# Database Connection String for GoTrue
GOTRUE_DATABASE_URL=postgres://postgres:your_secure_password@postgres:5432/postgres?search_path=auth

# SMTP Configuration (Required for Emails)
GOTRUE_SMTP_HOST=smtp.example.com
GOTRUE_SMTP_PORT=587
GOTRUE_SMTP_USER=user
GOTRUE_SMTP_PASS=pass

# AppFlowy Cloud Configuration
APPFLOWY_DATABASE_URL=postgres://postgres:your_secure_password@postgres:5432/postgres
APPFLOWY_GOTRUE_BASE_URL=http://gotrue:9999
APPFLOWY_WEB_URL=https://your-domain.com
APPFLOWY_ACCESS_CONTROL=true

# Web Socket URL
APPFLOWY_WS_BASE_URL=wss://your-domain.com/ws/v2
